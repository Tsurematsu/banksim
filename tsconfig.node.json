{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": false, // no estricto
    "noEmitOnError": false, // no emite errores del js
    "skipDefaultLibCheck": true, // eskipea comprobacion de tipos de libs
    "isolatedModules": false, // evita problemas con los imports
    "noUnusedLocals": false, // desactivar locales no usadas
    "noUnusedParameters": false, // parametros no usados
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  },
  "include": ["vite.config.ts"]
}
